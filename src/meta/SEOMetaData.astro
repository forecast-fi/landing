---
import { SEO } from 'astro-seo';

import type { MetaData } from '~/types';

// Defaults
const {
  title = 'AutoVisita',
  useTitleTemplate = false,
  description = 'Automatiza tu gestión inmobiliaria. Simplifica y optimiza la gestión de clientes y propiedades con nuestra plataforma inteligente.',
  canonical = Astro.url.href,
  index = true,
  follow = true,
  openGraph = {
    title: 'AutoVisita',
    description:
      'Automatiza tu gestión inmobiliaria. Simplifica y optimiza la gestión de clientes y propiedades con nuestra plataforma inteligente.',
    type: 'website',
    image: '~/assets/images/og_image.png',
    url: canonical,
    siteName: 'AutoVisita',
    locale: 'es_ES',
  },
  twitter = {
    cardType: 'summary_large_image',
    site: '@AutoVisita',
    title: 'AutoVisita',
    description:
      'Automatiza tu gestión inmobiliaria. Simplifica y optimiza la gestión de clientes y propiedades con nuestra plataforma inteligente.',
    image: '~/assets/images/og_image.png',
  },
}: MetaData = Astro.props;
---

<SEO
  title={title}
  titleTemplate={useTitleTemplate ? '%s - AutoVisita' : undefined}
  description={description}
  canonical={canonical}
  noindex={!index}
  nofollow={!follow}
  openGraph={{
    basic: {
      title: openGraph.title,
      type: openGraph.type,
      image: openGraph.image,
      url: openGraph.url,
    },
    optional: {
      locale: openGraph.locale,
      siteName: openGraph.siteName,
    },
  }}
  ,
  twitter={{
    card: twitter.cardType,
    site: twitter.site,
    title: twitter.title,
    description: twitter.description,
    image: twitter.image,
  }}
/>
