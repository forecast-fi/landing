---
import { render } from 'astro:content';

const { release } = Astro.props;
const { Content } = await render(release);
---

<div class="relative bg-white rounded-lg p-6 shadow-sm border border-gray-100">
  <h2 class="text-2xl font-bold">{release.data.version}</h2>
  <div class="text-gray-500 mt-1 md:mt-0">
    {
      release.data.date.toLocaleDateString('es-ES', {
        year: 'numeric',
        month: 'long',
        day: 'numeric',
      })
    }
  </div>
  <div class="prose max-w-none mt-4">
    <Content />
  </div>
</div>
